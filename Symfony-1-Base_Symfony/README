# Check if docker is install
docker --version

# Check if docker compose is install
docker compose version

# Put the user in the docker group
sudo usermod -aG docker $USER

# Launch the docker
docker compose build --no-cache
docker compose up -d

# Get the shell of the container
docker compose exec php bash

# To change the exercice that you want to reveiw, you have to modify the docker-compose.yml with the right path of the exercice, then rebuild and restart
docker compose up -d --build

# Stop the containers
docker compose down